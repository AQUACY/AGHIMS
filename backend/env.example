# Database Configuration
# Set DATABASE_MODE to "sqlite" or "mysql"
DATABASE_MODE=sqlite

# SQLite Configuration (used when DATABASE_MODE=sqlite)
SQLITE_DB_PATH=./hms.db

# MySQL Configuration (used when DATABASE_MODE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=hms
MYSQL_CHARSET=utf8mb4

# JWT Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Facility Settings
FACILITY_CODE=ER-A25

# Analyzer Integration Settings (Sysmex XN-330)
ANALYZER_ENABLED=false
ANALYZER_HOST=0.0.0.0
ANALYZER_PORT=5150
ANALYZER_EQUIPMENT_IP=10.10.16.34
ANALYZER_TIMEOUT=30

# Database Backup & Sync Settings
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Scheduled Backup Settings
SCHEDULED_BACKUP_ENABLED=false
SCHEDULED_BACKUP_TIME=07:00,19:00
# Multiple times: comma-separated (e.g., "07:00,19:00" for 7am and 7pm)
SCHEDULED_BACKUP_INTERVAL_HOURS=24

# Online Sync Settings (Remote MySQL Database)
SYNC_ENABLED=false
SYNC_REMOTE_HOST=
SYNC_REMOTE_PORT=3306
SYNC_REMOTE_USER=
SYNC_REMOTE_PASSWORD=
SYNC_REMOTE_DATABASE=
SYNC_INTERVAL_MINUTES=60

# Application Date Override Settings
# When set, the application will use this date instead of the system date.
# This is useful when the system date is changed for testing or working with historical data,
# but you want the application to continue using the original current date.
# Format: "YYYY-MM-DD" or "YYYY-MM-DD HH:MM:SS" (e.g., "2024-01-15" or "2024-01-15 10:30:00")
# Leave empty to use system date
APPLICATION_REFERENCE_DATE="2025-10-20"

